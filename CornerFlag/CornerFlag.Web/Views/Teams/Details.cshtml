@using CornerFlag.Data.Models.People
@model Team
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Team "@Model.Name"</h1>
    <h2>@Model.Players.Count Players</h2>
    @foreach (var position in @Model.Players.GroupBy(p => p.Position))
    {
        <div class="container">
            <h3>@string.Format("{0}s", position.First().Position.ToString())</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Country</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody class="alternate-color-table">
                    @foreach (var player in position)
                    {
                        <tr>
                            <td>@player.FirstName</td>
                            <td>@player.LastName</td>
                            <td>@player.Country.Name</td>
                            <td>
                                <a href="~/Players/@player.Id" class="btn btn-info">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>