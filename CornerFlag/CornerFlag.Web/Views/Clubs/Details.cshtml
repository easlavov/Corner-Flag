@using CornerFlag.Data.Models.Entities
@model Club
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>@Model.Name - Details</h2>
    <h3>@Model.Country.Name</h3>
    <h4>@Model.DateFounded.Year</h4>
    <div class="col-md-6">
        <h3>Competitions</h3>
        <ul class="list-group">
            @foreach (var comp in Model.Competitions)
            {
                Html.RenderPartial("_CompetitionListItem", comp);
            }
        </ul>
    </div>

    <div class="col-md-6">
        <h3>Teams</h3>
        <ul class="list-group">
            @foreach (var team in Model.Teams)
            {
                <li class="list-group-item">
                    <a href="~/teams/@team.Id/Details">@team.Name</a>
                </li>
            }
        </ul>
    </div>
</div>
